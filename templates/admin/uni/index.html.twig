{% extends 'base.html.twig' %}

{% block title %}Space-Tactics Main{% endblock %}

{% block body %}
    <!-- Main Menu -->
    {% include 'admin/parts/mainmenu.html.twig' %}


    <!-- Content -->
    <section id="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2 col-md-12">
                    <!-- Sidebar -->
                    {% if app.user is not null %}
                        {% include 'admin/parts/sidebar.html.twig' %}
                    {% endif %}
                </div>

                <!-- Main Content -->
                <div class="col-lg-10 col-md-12">
                    <section>
                        <div class="row">
                            <div class="col-lg-7 col-md-12">
                                <h3>Universum Übersicht</h3>

                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Universum aktiv</th>
                                        <th>Universum</th>
                                        <th>Player</th>
                                        <th>Game Speed</th>
                                        <th>Fleet Speed</th>
                                        <th>Forum Url</th>
                                        <th>Sprache</th>
                                        <th>Galaxy-Breite</th>
                                        <th>Galaxy-Höhe</th>
                                        <th>Galaxy-Tiefe</th>
                                        <th>Optionen</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for uni in unis %}
                                        <tr>
                                            <td>{{ uni.uniEnabled }}</td>
                                            <td>{{ uni.uniName }}</td>
                                            <td>{{ uni.usersAmount }}</td>
                                            <td>{{ uni.gameSpeed }}</td>
                                            <td>{{ uni.fleetSpeed }}</td>
                                            <td><a href="{{ uni.forumUrl }}" target="_blank">{{ uni.forumUrl }}</a></td>
                                            <td>{{ uni.language }}</td>
                                            <td>{{ uni.galaxyWidth }}</td>
                                            <td>{{ uni.galaxyHeight }}</td>
                                            <td>{{ uni.galaxyDepth }}</td>
                                            <td>
                                                <a href="{{ path('uni_show', {'id': uni.id}) }}">show</a>
                                                <a href="{{ path('uni_edit', {'id': uni.id}) }}">edit</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="70">Keine Einträge vorhanden</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <a href="{{ path('uni_new') }}">Neues Universum erstellen</a>

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    {% include 'parts/footer.html.twig' %}
{% endblock %}
